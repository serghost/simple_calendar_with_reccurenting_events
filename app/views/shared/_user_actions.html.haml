- if current_user
  .dropdown
    .dropdown-toggle(data-toggle="dropdown")
      = current_user.email
      %span.caret
    %ul.dropdown-menu
      %li
        = link_to "Главная", root_path
      %li
        = link_to "Личный календарь", events_path unless current_page? events_path
      %li
        = link_to "Редактировать профиль", edit_user_registration_path
      %li
        = link_to "Выйти", destroy_user_session_path, method: :delete, class: "text-danger muted"

- else
  = link_to 'Войти', new_user_session_path, { :class=>"btn btn-default" }
  = link_to 'Регистрация', new_user_registration_path, { :class=>"btn btn-primary" }
